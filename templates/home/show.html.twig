{% extends 'base.html.twig' %}

{% block title %}
    Blog Details
{% endblock %}

{% block body %}
    <div class="container">
        <div class="card mb-3">
  <h3 class="card-header">{{post.title}}</h3>
  <div class="card-body">
    <h5 class="card-title">{{post.author}}</h5>
    <h6 class="card-subtitle text-muted">{{post.createdAt | date('d/m/Y')}}</h6>
  </div>
  <img src="{{post.image}}" />
  <div class="card-body">
    <p class="card-text">{{post.description}}</p>
  </div>
    </div>
{% endblock %}